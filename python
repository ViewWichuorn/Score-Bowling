sum = 0
i = 1
while True :
  if i > 10 :
    break
  elif i <= 10 :
    print("---frame %d---"%i)
    i += 1
    r1 = 0
    r2 = 0
    while True :
      r1 = int(input("R1="))
      if r1 == 10:
        sum += r1
      elif r1 < 10:
        r3 = 10-r1
        r2 = int(input("R2(0-%d) ="%r3))
        sum += r1 + r2    
      break
print("total score is %d"%sum)
